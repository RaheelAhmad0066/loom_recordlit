{
    "manifest_version": 3,
    "name": "Recordly - Quick Screen Recorder",
    "version": "1.0.0",
    "description": "Record your browser tab or screen instantly with Recordly.",
    "permissions": [
        "tabCapture",
        "storage",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}